<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.NuevoUsuario">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Registro de nuevo usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ApePat"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="43dp"
        android:layout_weight="3"
        android:hint="Apellido Paterno"
        android:inputType="none"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ApeMat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/Nombre" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="24dp"
        android:text="Correo:"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/correo"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/confCorreo"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="128dp"
        android:layout_weight="3"
        android:hint="Ejemplo@domino.com"
        android:inputType="none"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/pass2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/ApePat" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="7dp"
        android:text="Apellido Materno:"
        app:layout_constraintBaseline_toBaselineOf="@+id/ApeMat"
        app:layout_constraintEnd_toStartOf="@+id/ApeMat"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Nombre"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="3"
        android:hint="Nombre"
        android:inputType="none"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="13dp"
        android:text="Confirma correo:"
        app:layout_constraintBaseline_toBaselineOf="@+id/confCorreo"
        app:layout_constraintEnd_toStartOf="@+id/confCorreo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="26dp"
        android:text="Nombre:"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/Nombre"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ApeMat"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="179dp"
        android:layout_weight="3"
        android:hint="Apellido Materno"
        android:inputType="none"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/pass1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="43dp"
        android:layout_weight="3"
        android:hint="Ejemplo@domino.com"
        android:inputType="none"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/confCorreo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/ApeMat" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:text="Apellido Paterno:"
        app:layout_constraintBottom_toBottomOf="@+id/ApePat"
        app:layout_constraintEnd_toStartOf="@+id/ApePat"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="104dp"
        android:text="Borrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="@+id/btnLimpiar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLimpiar" />

    <TextView
        android:id="@+id/nuevoPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="4dp"
        android:text="Nueva \n Contraseña :"
        app:layout_constraintBottom_toBottomOf="@+id/pass1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/pass1"
        app:layout_constraintTop_toBottomOf="@+id/pass1" />

    <TextView
        android:id="@+id/confPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="4dp"
        android:text="Confirma\nContraseña :"
        app:layout_constraintBottom_toBottomOf="@+id/pass2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="314dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/confCorreo"
        app:layout_constraintStart_toEndOf="@+id/confPass" />

</androidx.constraintlayout.widget.ConstraintLayout>